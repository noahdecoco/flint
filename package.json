{
  "name": "flint",
  "version": "1.0.0",
  "description": "A web-app fire starter",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js --mode=production",
    "frontend": "webpack-dev-server --open --config webpack.dev.js --mode=development",
    "backend": "nodemon server/index.js",
    "eslint": "./node_modules/.bin/eslint ./",
    "tslint": "./node_modules/tslint/bin/tslint -c tslint.json '**/*.ts'",
    "lint": "concurrently \"npm run eslint\" \"npm run tslint\"",
    "start": "concurrently \"npm run backend\" \"npm run frontend\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run lint"
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^4.0.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.6.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.0.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.0",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-cli": "^3.1.1",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-dev-server": "^3.1.9",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {}
}
